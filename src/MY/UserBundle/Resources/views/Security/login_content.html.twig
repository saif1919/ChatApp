
{% trans_default_domain 'FOSUserBundle' %}
{% extends "@MYUser/layoutconnexion.html.twig" %}







{% block container %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<div class="top-content">
<div class="inner-bg" style="margin-top: 0%;padding-top: 0%" >
<div class="container" >
    <div class="row" >
    <div class="col-sm-4 col-sm-offset-4 form-box"  >
    <div class="form-top">
    <div class="form-top-left">
       <h3>Connexion</h3>

    </div>
    <div class="form-top-right">
        <i class="fa fa-lock"></i>
    </div>
    </div>
    <div class="form-bottom">
<form action="{{ path("fos_user_security_check") }}" method="post" class="login-form">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}


     <div class="form-group">
        <label class="sr-only" for="username"></label>
        <input type="text" id="username" name="_username" value="{{ last_username }}" required="required"  class="form-username form-control" placeholder="Adresse mail ou utilisateur"/>
    </div>


    <div class="form-group">
       <label for="password"></label>
       <input type="password" id="password" name="_password" required="required" class="form-password form-control" placeholder="Mot de passe"/>
    </div>

<div class="form-group">
    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
    <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
    <a href="{{ path('fos_user_registration_register') }}"> Cr√©er un compte</a>
</div>
    <button type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}"  class="btn">{{ 'security.login.submit'|trans }}</button>
 <a href="{{ path('fos_user_resetting_request') }}"> mot de passe perdu?</a>
</form>
    </div>
    </div>
    </div>
    </div>
    </div>
    </div>
{% endblock %}